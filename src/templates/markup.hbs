{{#each this}}
<article>
    <h1 class="title">{{this.name}}</h1>

    <div class="container__card">
        <div class="container__text">

            <ul class="container__list-text">
                <li><span class="container__capital container__item">Capital:<span
                            class="container__capital-value">{{this.capital}}</span></span></li>
                <li><span class="container__population container__item">Population: <span
                            class="container__population-value">{{this.population}} </span></span></li>

            </ul>
            <span>Languages:</span>
            <ul class="container__list">
                {{#each this.languages}}
                <li><span class="container__languages container__item container__languages "> {{this.name}}</span>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="container__img">

            <img src="{{this.flag}}" alt="Flag" width="320" height="320">

        </div>
    </div>

</article>
{{/each}}